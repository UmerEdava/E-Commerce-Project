	<script>
		function addMenCategoryForm() {
		
           var button = document.getElementById("addMenCategoryButton");

		   if (button.innerHTML === "Cancel") {
                button.innerHTML = "Add category";
            } else {
              button.innerHTML = "Cancel";
            }

			$("#addMenCategory").toggle();
 
		}

		function addWomenCategoryForm() {
			var button = document.getElementById("addWomenCategoryButton");

		   if (button.innerHTML === "Cancel") {
