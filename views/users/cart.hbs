    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table" id="cartDiv">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th class="p-name">Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th><button onclick="clearCart('{{user}}')">Clear cart</button></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>

                                    <td class="cart-pic first-row"><img
                                            src="/images/product-images/{{this.product._id}}1.jpg" alt=""></td>
                                    <td class="cart-title first-row">
                                        <h5>{{this.product.name}}</h5>
                                    </td>
                                    <td class="p-price first-row">&#8377; {{this.product.price}}</td>

                                    <td class="qua-col first-row">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <span class="dec qtybtn"
                                                    onclick="changeQty('{{this._id}}','{{this.product._id}}','{{../user}}',-1)">-</span>
                                                <input type="text" value="{{this.quantity}}" id="{{this.product._id}}">
                                                <span class="inc qtybtn"
                                                    onclick="changeQty('{{this._id}}','{{this.product._id}}','{{../user}}',1)">+</span>
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td id="subTotal" class="total-price first-row">{{this.subTotal}}</td>
                                    
                                    <td class="close-td first-row"><i class="ti-close"
                                            onclick="removeProductFromCart('{{this._id}}','{{this.product._id}}')"></i>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    {{#unless products}}
                    <div class="text-center">
                        <div class="cart-buttons">
                            <h2 class="mb-5">Cart is empty</h2>
                            <a href="/" class="primary-btn continue-shop">Continue shopping</a>
                        </div>
                    </div>
                    {{/unless}}

                    {{#if products}}
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="cart-buttons">
                                <a href="#" class="primary-btn continue-shop">Continue shopping</a>
                                <a href="#" class="primary-btn up-cart">Update cart</a>
                            </div>
                            <div class="discount-coupon">
                                <h6>Discount Codes</h6>
                                <form id="couponForm" class="coupon-form">
                                    <input type="text" placeholder="Enter your codes" name="enteredCoupon">
                                    <button type="submit" class="site-btn coupon-btn">Apply</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-4">
                            <div class="proceed-checkout">
                                <ul>
                                    {{!-- <li class="subtotal">Subtotal <span id="subtotal">{{total}}</span></li> --}}
                                    <li class="total">Total <span id="total">{{total}}</span></li>
                                </ul>
                                <a href="/checkout" class="proceed-btn">PROCEED TO CHECK OUT</a>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
    <!-- Shopping Cart Section End -->

