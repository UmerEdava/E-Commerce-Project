<div class="mobile-sticky-body-overlay"></div>

<div class="wrapper">
    <div class="page-wrapper">
        <div class="content-wrapper">
            <div class="content">
                <h2 class="mb-5">Generate coupon</h2>
                <form action="/admin/generate_coupon" method="POST" class="form-pill">

                    <div class="row">
                        <div class="col-sm-6">
                            <label for="">Starting date</label>
                            <input type="date" onchange="handler(event)" name="startDate" class="form-control" id="startDate"
                                placeholder="Enter offer starting date">
                        </div>
                        <div class="col-sm-6">
                            <label for="">Last date</label>
                            <input type="date" name="lastDate" class="form-control" id="lastDate"
                                placeholder="Enter the validity date of offer">
                        </div>
                    </div>

                    <div class="input-group mb-2 mt-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="mdi mdi-currency-inr"></i>
                            </span>
                        </div>
                        <input type="number" class="form-control" placeholder="Enter Offer Amount" aria-label=""
                            autocomplete="off" name="amount" maxlength="10">
                    </div>

                    <input type="submit" class="mb-1 btn btn-info mt-4" value="Generate" style="border-radius:23px;">

                </form>
            </div>
        </div>
    </div>
</div>

<script>
        $(function () {
            var dtToday = new Date();

            var month = dtToday.getMonth() + 1;
            var day = dtToday.getDate();
            var year = dtToday.getFullYear();
            if (month < 10)
                month = '0' + month.toString();
            if (day < 10)
                day = '0' + day.toString();

            var maxDate = year + '-' + month + '-' + day;

            $('#startDate').attr('min', maxDate);
            $('#lastDate').attr('min', maxDate);
        });
    </script>

    <script>
        function handler(e) {
            var first = e.target.value
            console.log('vanne', first)
            document.getElementById("lastDate").min = first
        }
    </script>