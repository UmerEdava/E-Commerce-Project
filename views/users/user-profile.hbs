<script>
    function removeAddress(firstName,streetAddress,phone){
        $.ajax({
            url:'/removeAddress',
            data:{
                firstName:firstName,
                streetAddress:streetAddress,
                phone:phone
            },
            method:'post',
            success:(response)=>{
                if(response){
                    document.getElementById(firstName+streetAddress+phone).style.display = "none"
                }
            }
        })
        
    }
</script>