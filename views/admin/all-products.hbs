<body class="sidebar-fixed sidebar-dark header-light header-fixed" id="body">
    <script>
        NProgress.configure({ showSpinner: false });
        NProgress.start();
    </script>

    <div class="mobile-sticky-body-overlay"></div>

    <div class="wrapper">

        <div class="page-wrapper">

            <div class="row">
                <div class="col-12">
                    <!-- Recent Order Table -->
                    <div class="card card-table-border-none" id="recent-orders">
                        <div class="card-header justify-content-between">
                            <h2>All Products</h2>
                            <div class="date-range-report ">
                                <span></span>
                            </div>
                        </div>
                        <div class="card-body pt-0 pb-5">
                            <table id="productTable" class="table card-table table-responsive table-responsive-large"
                                style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Description</th>
                                        <th class="d-none d-md-table-cell">Stock</th>
                                        <th class="d-none d-md-table-cell">For</th>
                                        <th class="d-none d-md-table-cell">Category</th>
                                        <th class="d-none d-md-table-cell">Price</th>
                                        <th class="d-none d-md-table-cell">Image</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr>
                                        <td>{{this.name}}</td>
                                        <td class="d-none d-md-table-cell">{{this.shortDescription}}</td>
                                        <td class="d-none d-md-table-cell">{{this.stock}}</td>
                                        <td class="d-none d-md-table-cell">{{this.for}}</td>
                                        <td class="d-none d-md-table-cell">{{this.category}}</td>
                                        <td class="d-none d-md-table-cell">{{this.price}}</td>
                                        <td class="d-none d-md-table-cell">
                                            <img src="/images/product-images/{{this._id}}1.jpg" width="50px"
                                                height="50px" alt="">
                                        </td>
                                        <td class="text-right">
                                            <div class="dropdown show d-inline-block widget-dropdown">
                                                <a class="dropdown-toggle icon-burger-mini" href="" role="button"
                                                    id="dropdown-recent-order1" data-toggle="dropdown"
                                                    aria-haspopup="true" aria-expanded="false"
                                                    data-display="static"></a>
                                                <ul class="dropdown-menu dropdown-menu-right"
                                                    aria-labelledby="dropdown-recent-order1">
                                                    <li class="dropdown-item">
                                                        <a href="/admin/edit_product/{{this._id}}">Edit</a>
                                                    </li>
                                                    <li class="dropdown-item">
                                                        <a href="/admin/delete_product/{{this._id}}"
                                                            onclick="return confirm('Are you sure to delete {{this.productName}}?')">Remove</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer mt-auto">
                <div class="copyright bg-white">
                    <p>
                        &copy; <span id="copy-year">2021</span> Copyright
                        <a class="text-primary" href="#" target="_blank">App Name</a>.
                    </p>
                </div>
                <script>
                    var d = new Date();
                    var year = d.getFullYear();
                    document.getElementById("copy-year").innerHTML = year;
                </script>
            </footer>

        </div>
    </div>


