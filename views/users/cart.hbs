    <script>
        function changeQty(cartId, proId, userId, count) {
            let quantity = parseInt(document.getElementById(proId).value)
            count = parseInt(count)

            console.log('id in ajax', userId)
            $.ajax({
                url: '/change_pro_qty',
                data: {
                    cart: cartId,
                    product: proId,
                    user: userId,
                    count: count,
                    quantity: quantity
                },
                method: 'post',
                success: (response) => {
                    if (response.removeProduct) {
                        alert('Product removed from cart')
                        location.reload()
                    } else {
                        console.log(response)
                        document.getElementById(proId).value = quantity + count
                        document.getElementById('total').innerHTML = response.total
                        document.getElementById('subTotal').innerHTML = response.subTotal
                    }
                }
            })
        }

        function removeProductFromCart(cartId, proId) {
            console.log(cartId, proId)
            $.ajax({
                url: '/remove_product_from_cart',
                data: {
                    cart: cartId,
                    product: proId
                },
                method: 'post',
                success: (response) => {
                    console.log('removed')
                    if (response) {
                        location.reload()
                    }

                }
            })
        }

        function clearCart(userId) {
            console.log('clicked',userId)
            $.ajax({
                url: '/clear_cart',
                data: {
                    userId: userId
                },
                method: 'post',
                success: (response) => {
                    if (response) {
                        window.location.reload()
                    }

                }
            })
        }


    </script>
